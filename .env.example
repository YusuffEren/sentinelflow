# =============================================================================
# SentinelFlow Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed
# Usage: cp .env.example .env

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRANSACTIONS=transactions
KAFKA_TOPIC_ALERTS=alerts
KAFKA_CONSUMER_GROUP=sentinelflow-consumers

# =============================================================================
# NEO4J CONFIGURATION
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sentinelflow_secret_2024

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false

# Fraud Detection Thresholds
CIRCULAR_TRANSACTION_MIN_DEPTH=3
CIRCULAR_TRANSACTION_MAX_DEPTH=6
IMPOSSIBLE_TRAVEL_MAX_SPEED_KMH=900
TRANSACTION_TIME_WINDOW_MINUTES=30

# Generator Settings
GENERATOR_BATCH_SIZE=100
GENERATOR_FRAUD_RATIO=0.05
